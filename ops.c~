#include "monty.h"

int getops(char *buf, stack_t **stack, unsigned int lc)
{
	int i = 0;

	instruction_t opcodes[] = {
		{"pall", pall},
		{"pop", pop},
		{"nop", nop},
		{NULL, NULL},
	};

	for (i = 0; opcodes[i].opcode; i++)
	{
		if (strcmp(buf, opcodes[i].opcode) == 0)
		{
			(opcodes[i].f)(stack, lc);
			return (0);
		}
	}
	return (0);
}
